<% layout('layouts/layout') %>

<% if(user_id){%>
  <form id = "addBlogForm" method = "post" action = "/blog/create" style="margin-top:150px">
    <div class = "form_group">
      <label for="name">제목:</label>
      <input type="text" class="form_control" name="name" SIZE=20 VALUE="제목을 입력하세요">
    </div>
    <div class="form_group">
      <label for="content">내용:</label>
      <textarea name="content" rows="10" cols="60" wrap="virtual">내용을 입력하세요</textarea>
    </div>
    <div class="form_group">
      <button type="button" class="btn btn-primary" onclick="insertBlog()">저장</button>
    </div>
  </form>
<%}else{%>
  <div style="margin-top:150px">로그인을 하셔야 합니다.</div>
<%}%>